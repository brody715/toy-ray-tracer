{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProjectConfig",
  "type": "object",
  "required": [
    "name",
    "scene",
    "settings"
  ],
  "properties": {
    "accelerator": {
      "default": {
        "kind": "bvh"
      },
      "allOf": [
        {
          "$ref": "#/definitions/AcceleratorConfig"
        }
      ]
    },
    "name": {
      "type": "string"
    },
    "scene": {
      "$ref": "#/definitions/SceneConfig"
    },
    "settings": {
      "$ref": "#/definitions/Settings"
    }
  },
  "definitions": {
    "AcceleratorConfig": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "kind"
          ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [
                "nop"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "kind"
          ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [
                "bvh"
              ]
            }
          }
        }
      ]
    },
    "AorB_for_TextureConfig_and_JVec3f": {
      "anyOf": [
        {
          "$ref": "#/definitions/TextureConfig"
        },
        {
          "$ref": "#/definitions/JVec3f"
        }
      ]
    },
    "AreaLightConfig": {
      "type": "object"
    },
    "CameraConfig": {
      "type": "object",
      "properties": {
        "aperture": {
          "default": 0.0,
          "type": "number",
          "format": "float"
        },
        "aspect": {
          "default": 1.0,
          "type": "number",
          "format": "float"
        },
        "focus_dist": {
          "default": 1.0,
          "type": "number",
          "format": "float"
        },
        "look_at": {
          "default": [
            0.0,
            0.0,
            -1.0
          ],
          "allOf": [
            {
              "$ref": "#/definitions/JVec3f"
            }
          ]
        },
        "look_from": {
          "default": [
            0.0,
            0.0,
            0.0
          ],
          "allOf": [
            {
              "$ref": "#/definitions/JVec3f"
            }
          ]
        },
        "time0": {
          "default": 0.0,
          "type": "number",
          "format": "float"
        },
        "time1": {
          "default": 0.0,
          "type": "number",
          "format": "float"
        },
        "vertical_fov": {
          "default": 90.0,
          "type": "number",
          "format": "float"
        },
        "view_up": {
          "default": [
            0.0,
            1.0,
            0.0
          ],
          "allOf": [
            {
              "$ref": "#/definitions/JVec3f"
            }
          ]
        }
      }
    },
    "EnvironmentConfig": {
      "type": "object",
      "required": [
        "l"
      ],
      "properties": {
        "l": {
          "$ref": "#/definitions/JVec3f"
        }
      }
    },
    "JVec2f": {
      "type": "array",
      "items": {
        "type": "number",
        "format": "float"
      },
      "maxItems": 2,
      "minItems": 2
    },
    "JVec3f": {
      "type": "array",
      "items": {
        "type": "number",
        "format": "float"
      },
      "maxItems": 3,
      "minItems": 3
    },
    "MaterialConfig": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "albedo",
            "kind"
          ],
          "properties": {
            "albedo": {
              "$ref": "#/definitions/AorB_for_TextureConfig_and_JVec3f"
            },
            "kind": {
              "type": "string",
              "enum": [
                "lambertian"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "albedo",
            "fuzz",
            "kind"
          ],
          "properties": {
            "albedo": {
              "$ref": "#/definitions/AorB_for_TextureConfig_and_JVec3f"
            },
            "fuzz": {
              "type": "number",
              "format": "float"
            },
            "kind": {
              "type": "string",
              "enum": [
                "metal"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "ir",
            "kind"
          ],
          "properties": {
            "ir": {
              "type": "number",
              "format": "float"
            },
            "kind": {
              "type": "string",
              "enum": [
                "dielectric"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "emit",
            "kind"
          ],
          "properties": {
            "emit": {
              "$ref": "#/definitions/AorB_for_TextureConfig_and_JVec3f"
            },
            "kind": {
              "type": "string",
              "enum": [
                "diffuse_light"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "albedo",
            "kind"
          ],
          "properties": {
            "albedo": {
              "$ref": "#/definitions/AorB_for_TextureConfig_and_JVec3f"
            },
            "kind": {
              "type": "string",
              "enum": [
                "isotropic"
              ]
            }
          }
        }
      ]
    },
    "PrimitiveConfig": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "kind",
            "material",
            "shape"
          ],
          "properties": {
            "area_light": {
              "anyOf": [
                {
                  "$ref": "#/definitions/AreaLightConfig"
                },
                {
                  "type": "null"
                }
              ]
            },
            "flip_face": {
              "default": false,
              "type": "boolean"
            },
            "kind": {
              "type": "string",
              "enum": [
                "geom"
              ]
            },
            "material": {
              "$ref": "#/definitions/MaterialConfig"
            },
            "shape": {
              "$ref": "#/definitions/ShapeConfig"
            },
            "transforms": {
              "default": [],
              "type": "array",
              "items": {
                "$ref": "#/definitions/TransformConfig"
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "children",
            "kind"
          ],
          "properties": {
            "children": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/PrimitiveConfig"
              }
            },
            "kind": {
              "type": "string",
              "enum": [
                "container"
              ]
            },
            "transforms": {
              "default": [],
              "type": "array",
              "items": {
                "$ref": "#/definitions/TransformConfig"
              }
            }
          }
        }
      ]
    },
    "SceneConfig": {
      "type": "object",
      "required": [
        "camera",
        "environments",
        "world"
      ],
      "properties": {
        "camera": {
          "$ref": "#/definitions/CameraConfig"
        },
        "environments": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/EnvironmentConfig"
          }
        },
        "world": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/PrimitiveConfig"
          }
        }
      }
    },
    "Settings": {
      "type": "object",
      "required": [
        "height",
        "max_depth",
        "nsamples",
        "output_dir",
        "width"
      ],
      "properties": {
        "height": {
          "type": "integer",
          "format": "uint",
          "minimum": 0.0
        },
        "max_depth": {
          "type": "integer",
          "format": "int32"
        },
        "nsamples": {
          "type": "integer",
          "format": "int32"
        },
        "output_dir": {
          "type": "string"
        },
        "weight": {
          "default": 0.5,
          "type": "number",
          "format": "float"
        },
        "width": {
          "type": "integer",
          "format": "uint",
          "minimum": 0.0
        }
      }
    },
    "ShapeConfig": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "center",
            "kind",
            "radius"
          ],
          "properties": {
            "center": {
              "$ref": "#/definitions/JVec3f"
            },
            "kind": {
              "type": "string",
              "enum": [
                "sphere"
              ]
            },
            "radius": {
              "type": "number",
              "format": "float"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "kind",
            "p_max",
            "p_min"
          ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [
                "cube"
              ]
            },
            "p_max": {
              "$ref": "#/definitions/JVec3f"
            },
            "p_min": {
              "$ref": "#/definitions/JVec3f"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "kind",
            "v0",
            "v1"
          ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [
                "rect"
              ]
            },
            "v0": {
              "$ref": "#/definitions/JVec3f"
            },
            "v1": {
              "$ref": "#/definitions/JVec3f"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "center",
            "kind",
            "normal",
            "radius"
          ],
          "properties": {
            "center": {
              "$ref": "#/definitions/JVec3f"
            },
            "kind": {
              "type": "string",
              "enum": [
                "disk"
              ]
            },
            "normal": {
              "$ref": "#/definitions/JVec3f"
            },
            "radius": {
              "type": "number",
              "format": "float"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "center0",
            "center1",
            "kind",
            "radius"
          ],
          "properties": {
            "center0": {
              "$ref": "#/definitions/JVec3f"
            },
            "center1": {
              "$ref": "#/definitions/JVec3f"
            },
            "kind": {
              "type": "string",
              "enum": [
                "cylinder"
              ]
            },
            "radius": {
              "type": "number",
              "format": "float"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "kind",
            "v0",
            "v1",
            "v2",
            "v3"
          ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [
                "pyramid"
              ]
            },
            "v0": {
              "$ref": "#/definitions/JVec3f"
            },
            "v1": {
              "$ref": "#/definitions/JVec3f"
            },
            "v2": {
              "$ref": "#/definitions/JVec3f"
            },
            "v3": {
              "$ref": "#/definitions/JVec3f"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "indices",
            "kind",
            "positions"
          ],
          "properties": {
            "indices": {
              "type": "array",
              "items": {
                "type": "integer",
                "format": "uint",
                "minimum": 0.0
              }
            },
            "kind": {
              "type": "string",
              "enum": [
                "triangle_mesh"
              ]
            },
            "normals": {
              "default": [],
              "type": "array",
              "items": {
                "$ref": "#/definitions/JVec3f"
              }
            },
            "positions": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/JVec3f"
              }
            },
            "uvs": {
              "default": [],
              "type": "array",
              "items": {
                "$ref": "#/definitions/JVec2f"
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "kind",
            "uri"
          ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [
                "uri"
              ]
            },
            "uri": {
              "type": "string"
            }
          }
        }
      ]
    },
    "TextureConfig": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "kind",
            "value"
          ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [
                "constant_texture"
              ]
            },
            "value": {
              "$ref": "#/definitions/JVec3f"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "kind",
            "uri"
          ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [
                "image_texture"
              ]
            },
            "uri": {
              "type": "string"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "even",
            "kind",
            "odd"
          ],
          "properties": {
            "even": {
              "$ref": "#/definitions/TextureConfig"
            },
            "kind": {
              "type": "string",
              "enum": [
                "checker_texture"
              ]
            },
            "odd": {
              "$ref": "#/definitions/TextureConfig"
            }
          }
        }
      ]
    },
    "TransformConfig": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "kind",
            "offset"
          ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [
                "translate"
              ]
            },
            "offset": {
              "$ref": "#/definitions/JVec3f"
            }
          }
        },
        {
          "type": "object",
          "required": [
            "angle",
            "axis",
            "kind"
          ],
          "properties": {
            "angle": {
              "type": "number",
              "format": "float"
            },
            "axis": {
              "$ref": "#/definitions/JVec3f"
            },
            "kind": {
              "type": "string",
              "enum": [
                "rotate"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "kind",
            "scale"
          ],
          "properties": {
            "kind": {
              "type": "string",
              "enum": [
                "scale"
              ]
            },
            "scale": {
              "$ref": "#/definitions/JVec3f"
            }
          }
        }
      ]
    }
  }
}
